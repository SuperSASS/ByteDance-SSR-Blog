{
  "name": "ssr-blog-server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,tsx,json --exec tsx src/app.ts",
    "build": "tsc",
    "lint": "eslint .",
    "start": "node dist/app.js",
    "db:reset": "tsx src/scripts/seed-db.ts",
    "db:studio": "prisma studio --url file:../../dev.db"
  },
  "dependencies": {
    "@koa/router": "^14.0.0",
    "dotenv": "^17.2.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^4.0.0",
    "koa-static": "^5.0.0",
    "winston": "^3.18.3",
    "prisma-adapter-node-sqlite": "^0.0.1",
    "ssr-blog-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.5"
  }
}
